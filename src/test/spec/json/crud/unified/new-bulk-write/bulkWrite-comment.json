      "operations": [
        {
          "object": "client0",
          "name": "bulkWrite",
          "arguments": {
            "requests": [
              {
                "insertOne": {
                  "namespace": {
                    "db": "crud-tests",
                    "coll": "coll0"
                  },
                  "document": {
                    "_id": "1"
                  }
                }
              }
            ],
            "comment": {
              "bulk": "write"
            }
          }
        }
      ],
      "expectEvents": [
        {
          "client": "client0",
          "events": [
            {
              "commandStartedEvent": {
                "command": {
                  "bulkWrite": 1,
                  "comment": {
                    "bulk": "write"
                  }
                }
              }
            }
          ]
        }
      ],
      "outcome": [
        {
          "collectionName": "coll0",
          "databaseName": "crud-tests",
          "documents": [
            {
              "_id": "1"
            }
          ]
        }
      ]
