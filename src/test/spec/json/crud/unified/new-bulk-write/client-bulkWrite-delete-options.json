            "matchedCount": 0,
            "modifiedCount": 0,
            "deletedCount": 3,
            "insertResults": {
              "$$unsetOrMatches": {}
            },
            "updateResults": {
              "$$unsetOrMatches": {}
            },
            "deleteResults": {
              "$$unsetOrMatches": {}
            }
          }
        }
      ],
      "expectEvents": [
        {
          "client": "client0",
          "events": [
            {
              "commandStartedEvent": {
                "command": {
                  "bulkWrite": 1,
                  "ops": [
                    {
                      "delete": 0,
                      "filter": {
                        "_id": 1
                      },
                      "collation": {
                        "locale": "simple"
                      },
                      "multi": false
                    },
                    {
                      "delete": 0,
                      "filter": {
                        "_id": {
                          "$gt": 1
                        }
                      },
                      "collation": {
                        "locale": "simple"
                      },
                      "multi": true
                    }
                  ]
                }
              }
            }
          ]
        }
      ],
      "outcome": [
        {
          "databaseName": "crud-tests",
          "collectionName": "coll0",
          "documents": []
        }
      ]
