            "models": [
              {
                "deleteOne": {
                  "namespace": {
                    "db": "crud-tests",
                    "coll": "coll0"
                  },
                  "filter": {
                    "_id": 1
                  },
                  "collation": {
                    "locale": "simple"
                  }
                }
              },
              {
                "deleteMany": {
                  "namespace": {
                    "db": "crud-tests",
                    "coll": "coll0"
                  },
                  "filter": {
                    "_id": {
                      "$gt": 1
                    }
                  },
                  "collation": {
                    "locale": "simple"
                  }
                }
              }
            ]
          },
          "expectResult": {
            "insertedCount": 0,
